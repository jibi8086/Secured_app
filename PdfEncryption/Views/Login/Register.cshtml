    <script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>
<script>
    $(document).ready(function () {
        $("#img-captcha").click(function () {
            resetCaptchaImage();
        });

        function resetCaptchaImage() {
            d = new Date();
            $("#img-captcha").attr("src", "/get-captcha-image?" + d.getTime());
        }
        $("#btnRegister").click(function () {
            debugger;
            var captcha = $('#txtCaptcha').val();
            var Email = $('#txtEmail').val();
            var FullName = $('#txtName').val();
            var Passwd = $('#txtPassword').val();
            var employe = {};
            employe.Captcha = captcha;
            employe.FullName = FullName;
            employe.EmailAddress = Email;
            employe.Passwd = Passwd;
            if (validateRegister()) {
                $.ajax({
                    type: "POST",
                    url: "/Login/EmployeeRegister",
                    data: employe,
                    dataType: "json",
                    success: function (response) {
                        if (response > 0) {
                            alert("Registeration Complete");
                            window.location.href = '/Login/Login/';
                        }
                        else if (response == -1) {
                            alert("Registeration Failed");
                        }
                        else if (response == -2) {
                            $('#txtCaptcha').val("");
                            resetCaptchaImage();
                            alert("Invalid Captcha");

                        }
                    },
                    failure: function (response) {
                        bootbox.alert("Process failed!! Please try again.");
                    },
                    error: function (response) {
                        bootbox.alert("Error!! Sorry for your inconvinience.");
                    }
                });
            }
    });
     function validateRegister(){
            var hasError = true;
         if ($('#txtName').val() == "") {
             $("#txtName").focus();
             hasError = false;
             alert('Please provide Email');
         }
         else if ($('#txtEmail').val() == "") {
             $("#txtEmail").focus();
             hasError = false;
             alert('Please provide Name');
         }
         else if ($('#txtPassword').val() == "") {
             $("#txtPassword").focus();
             hasError = false;
             alert('Please provide Password');
         }
         else if ($('#txtRetypePassword').val() == "") {
             $("#txtRetypePassword").focus();
             hasError = false;
             alert('Please provide Retype Password');
         }
         else if ($('#txtPassword').val() != $('#txtRetypePassword').val()) {
             $("#txtRetypePassword").focus();
             hasError = false;
             alert('Passwords do not match.');
         }
         else if (validateEmail($('#txtEmail').val())) {
             hasError = false;
             $("#txtEmail").focus();
             alert('Invalid Email Address');
         }
            
            return hasError;
        }

        function validateEmail(emailField){
        var reg = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;

        if (reg.test(emailField.value) == false) 
        {
            
            return true;
        }

        return false;

}
    });
</script>
